<table id="projects-table" class="table table-striped table-bordered" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Internal</th>
    </tr>
  </thead>
  <% projects.each do |project| %>
    <tr class="<%= 'warning' unless video.active %>">
      <td><%= project.name %></td>
      <td><%= project.time_type %></td>
      <td><%= project.internal %></td>
      <td>
        <%= link_to edit_project_path(project), remote: true,
          class: 'btn btn-default btn-sm' do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to project_delete_path(project), remote: true,
          class: 'btn btn-danger btn-sm' do %>
          <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

